{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <div class="row">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="col-sm-12">
                <a href="{{ path('task_create') }}" class="btn btn-info pull-right">Créer une tâche</a>
            </div>
        {% endif %}

        {% for task in tasks %}
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h4 class="pull-right">
                            {% if task.isDone %}
                                <span class="glyphicon glyphicon-ok"></span>
                            {% else %}
                                <span class="glyphicon glyphicon-remove"></span>
                            {% endif %}
                        </h4>
                        <h4>{{ task.title }}</h4>
                        <p>{{ task.content }}</p>
                    </div>
                    <div>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a href="{{ path('task_toggle', {'id' : task.id }) }}">
                                {% if not task.isDone %}
                                    Marquer comme faite
                                {% else %}
                                    Marquer non terminée
                                {% endif %}
                            </a>
                        {% endif %}
                        {% if is_granted('edit', task) %}
                            <a href="{{ path('task_delete', {'id' : task.id }) }}">Supprimer</a>
                        {% endif %}
                        {% if is_granted('edit', task) %}
                            <a href="{{ path('task_edit', {'id' : task.id }) }}">Modifier</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée. 
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
